---
interface Props {
  startDate: string;
  endDate: string;
  company: string;
  position?: string;
  description?: string;
}


const { startDate, endDate, company, position, description } = Astro.props;
---

<div>
    <p class="text-sm text-gray-500">{startDate} ~ {endDate}</p>
    <h4 class="font-bold mt-1 text-gray-800">
        {company} - {position}
    </h4>
    <p class="text-gray-700 mt-1">
        {description}
    </p>
</div>